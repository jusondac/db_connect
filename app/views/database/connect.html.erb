<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Connect to Database</h1>
  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <%= form_with url: database_connect_path, method: :post do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :url, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.label :host, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :host, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.label :database_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :database_name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.label :user, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :user, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div class="md:col-span-2">
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      <%= form.submit "Connect", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded font-medium" %>
    <% end %>
  </div>
  <% if @tables %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Tables</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @tables.each do |table| %>
          <div class="bg-gray-50 border border-gray-200 rounded p-4">
            <p class="text-gray-800 font-medium"><%= table %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @columns %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Columns for <%= @selected_table %></h2>
      <div class="flex flex-wrap gap-2">
        <% @columns.each do |column| %>
          <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded text-sm"><%= column %></span>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @data %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Data from <%= @selected_table %></h2>
      <div class="overflow-x-auto">
        <table class="min-w-full border-collapse border border-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <% @columns.each do |column| %>
                <th class="border border-gray-300 px-4 py-2 text-left text-sm font-medium text-gray-700"><%= column %></th>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @data.each do |row| %>
              <tr class="hover:bg-gray-50">
                <% @columns.each do |column| %>
                  <td class="border border-gray-300 px-4 py-2 text-sm text-gray-900"><%= row[column] %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
