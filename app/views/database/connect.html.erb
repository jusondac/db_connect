<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Connect to Database</h1>
  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <p class="text-green-800"><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <p class="text-red-800"><%= flash[:alert] %></p>
    </div>
  <% end %>
  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <%= form_with url: database_connect_path, method: :post, data: { controller: "database-connect" } do |form| %>
      <%= form.hidden_field :url, data: { "database-connect-target": "urlHidden" } %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :url_display, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-100", disabled: true, data: { "database-connect-target": "urlDisplay" } %>
        </div>
        <div>
          <%= form.label :host, class: "block text-sm font-medium text-gray-700  mb-1" %>
          <%= form.text_field :host, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", data: { "database-connect-target": "host", action: "input->database-connect#updateUrl" }, value: @host|| "localhost" %>
        </div>
        <div>
          <%= form.label :port, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :port, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", data: { "database-connect-target": "port", action: "input->database-connect#updateUrl" }, value: @port || "5432" %>
        </div>
        <div>
          <%= form.label :database_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :database_name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", data: { "database-connect-target": "databaseName", action: "input->database-connect#updateUrl" }, value: @database_name %>
        </div>
        <div>
          <%= form.label :user, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :user, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", value: @user %>
        </div>
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      <%= form.submit "Connect", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded font-medium" %>
    <% end %>
  </div>
  <% if @database_name %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-green-800 mb-4">Connection Info</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <span class="font-medium text-gray-700">Database Name:</span>
          <span class="text-gray-900"><%= @database_name %></span>
        </div>
        <div>
          <span class="font-medium text-gray-700">Host:</span>
          <span class="text-gray-900"><%= @host %></span>
        </div>
        <% if @port %>
          <div>
            <span class="font-medium text-gray-700">Port:</span>
            <span class="text-gray-900"><%= @port %></span>
          </div>
        <% end %>
        <% if @user %>
          <div>
            <span class="font-medium text-gray-700">User:</span>
            <span class="text-gray-900"><%= @user %></span>
          </div>
        <% end %>
        <% if @table_name %>
          <div>
            <span class="font-medium text-gray-700">Selected Table:</span>
            <span class="text-gray-900"><%= @table_name %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% if @tables %>
  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Tables</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @tables.each do |table| %>
        <div class="bg-gray-50 border border-gray-200 rounded p-4">
          <p class="text-gray-800 font-medium"><%= table %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>
